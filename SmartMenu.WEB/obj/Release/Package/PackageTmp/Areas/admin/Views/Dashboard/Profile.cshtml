@model SmartMenu.DAL.Models.RestaurantModelVM
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdminPanel.cshtml";
}
@section scripts{
    <script src="~/Content/project/js/admin/profile.js"></script>
}
<div class="row pageTitle">
    <div class="col-lg-12">
        <h1>Setting</h1>
        <p>This page allow you to change configuration what you have made</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox-content settingSideNav">
                    @Html.Partial("_SettingMenu")
                </div>
            </div>
            <div class="col-lg-9">
                <div class="ibox-content wrapperPadding">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1default" data-toggle="tab">Basic Detail</a></li>
                        <li><a href="#tab2default" data-toggle="tab">Images</a></li>
                    </ul>
                    <div class="panel-body profileWrapperMargin">
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="tab1default">
                                <form id="frmAddUpdateRestaurant" class="form-horizontal restroProfile">
                                    @Html.HiddenFor(c => c.Id)
                                    <div class="row colMarginBottom">
                                        <div class="col-lg-10">
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-12">
                                                    <p>Resturant Name</p>
                                                    <span>@Model.Name</span>
                                                </div>
                                            </div>
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-6">
                                                    <p>Email Address</p>
                                                    <span>@Model.Email</span>
                                                </div>
                                                <div class="col-lg-6">
                                                    <p>Mobile Number</p>
                                                    <span>@Model.Mobile</span>
                                                </div>
                                            </div>
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-12">
                                                    <p>Address</p>
                                                    <span>@Model.Address</span>
                                                </div>
                                            </div>
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-4">
                                                    <p>State</p>
                                                    <span>@Model.City</span>
                                                </div>
                                                <div class="col-lg-4">
                                                    <p>City</p>
                                                    <span>@Model.City</span>
                                                </div>
                                                <div class="col-lg-4">
                                                    <p>ZipCode</p>
                                                    <span>@Model.ZipCode</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!--profile end-->
                                    <div class="row colMarginBottom">
                                        <div class="col-lg-12">
                                            <h2 class="formHeading">Contact Details</h2>
                                        </div>
                                        <div class="col-lg-10">
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-4">
                                                    <p>Contact Person Name</p>
                                                    <span>@Model.ContactPersonName</span>
                                                </div>
                                                <div class="col-lg-4">
                                                    <p>Contact Number</p>
                                                    <span>@Model.ContactNumber</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h2 class="formHeading">Resturant Details</h2>
                                        </div>
                                        <div class="col-lg-10">
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-12">
                                                    <p>Cuisnes</p>
                                                    <span>@Model.Cuisnes</span>
                                                </div>
                                            </div>
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-3">
                                                    <p>Restaurant Type</p>
                                                    @if (Model.TypeOfRestaurant == "Fine_Dining")
                                                    {
                                                        <span><b>Fine Dining</b></span>
                                                    }
                                                    @if (Model.TypeOfRestaurant == "Fast_Food")
                                                    {
                                                        <span><b>Fast Food</b></span>
                                                    }
                                                    @if (Model.TypeOfRestaurant == "Cafe")
                                                    {
                                                        <span><b>Cafe</b></span>
                                                    }
                                                    @if (Model.TypeOfRestaurant == "Casual_Dining")
                                                    {
                                                        <span><b>Casual Dining</b></span>
                                                    }

                                                </div>
                                                <div class="col-lg-3">
                                                    <p>Meals Otions</p>
                                                    @if (Model.RestaurantMealOption == "Vegeterian_Only")
                                                    {
                                                        <span><b>Vegeterian Only</b></span>
                                                    }
                                                    @if (Model.RestaurantMealOption == "Non_Vegetarian_Only")
                                                    {
                                                        <span><b>Non Vegetarian Only</b></span>
                                                    }
                                                    @if (Model.RestaurantMealOption == "Both_Vegeterian_Non_Vegetarian")
                                                    {
                                                        <span><b>Both Veg & Non-Veg</b></span>
                                                    }
                                                </div>
                                                <div class="col-lg-3">
                                                    <p>Number of Tables</p>
                                                    <span>@Model.NumberOfTable Tables</span>
                                                </div>
                                                <div class="col-lg-3">
                                                    <p>Average Cost 2 Person</p>
                                                    <span>@Model.AverageCostTwoPerson</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row colMarginBottom">
                                        <div class="col-lg-12">
                                            <h2 class="formHeading">Subscription Details</h2>
                                        </div>
                                        <div class="col-lg-10">
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-3">
                                                    <p>Active Plans</p>
                                                    <span>@Model.ActivePlan</span>
                                                </div>
                                                <div class="col-lg-3">
                                                    <p>Annual Cost($)</p>
                                                    <span>@Model.AnnualCost</span>
                                                </div>
                                                <div class="col-lg-3">
                                                    <p>Commision (%)</p>
                                                    <span>@Model.Commision</span>
                                                </div>
                                                <div class="col-lg-3">
                                                    <p>Plan Active Date</p>
                                                    <span>@(Model.PlanActiveDate.HasValue ?  Model.PlanActiveDate.Value.ToShortDateString():"")</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h2 class="formHeading">Document Details</h2>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="row profilViewBottom">
                                                <div class="col-lg-8">
                                                    <div class="row">
                                                        <div class="col-lg-4">
                                                            <p>Tax/Registration Document</p>
                                                            <span>@(Model.FSSAIRegistration==string.Empty ? "------":Model.FSSAIRegistration)</span>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="preview-image-FSSAI" style="display:@(Model.FSSAIFilePath!=null && Model.FSSAIFilePath!=string.Empty ? "block":"none")">
                                                                <a id="linkFSSAIFilePath" href="@(Model.FSSAIFilePath!=null && Model.FSSAIFilePath!=string.Empty ? Model.FSSAIFilePath:"")" target="_blank">Uploaded File</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="tab2default">
                                <div class="row">
                                    <form id="frmAddUpdateImages" class="form-horizontal">
                                        <input type="hidden" id="hdnBannerImg" value="@ViewBag.BannerImg" />
                                        <input type="hidden" id="hdnPromotionalImg" value="@ViewBag.PromotionalImg" />
                                        <input type="hidden" id="hdnEmptyCartImg" value="@ViewBag.EmptyCartImg" />
                                        <input type="hidden" id="hdnOfflineImg" value="@ViewBag.OfflineImg" />
                                        <input type="hidden" id="hdnMinOrderImg" value="@ViewBag.MinOrderImg" />
                                        <input type="hidden" id="hdnLocationFarAwayImg" value="@ViewBag.LocationFarAwayImg" />
                                        <div class="form-group colMarginBottom">
                                            <label class="col-sm-2 control-label">Banner Image</label>
                                            <div class="col-lg-4">
                                                <div class="upload-btn-wrapper">
                                                    <button class="uploadBtn" type="button">
                                                        <i class="sm-file"></i> <br>Upload your file (.png, .jpg)
                                                    </button>
                                                    <input type="file" class="form-control" id="bannerImgPath" name="banner" onchange="readImage(this)" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="preview-image upload-btn-wrapper previewBorder">
                                                    <a id="linkUploadFilePath" name="banner" data-content="@Path.GetExtension(ViewBag.BannerImg)" href="@ViewBag.BannerImg" target="_blank" style="display:@(ViewBag.IsBannerImg==true ?"block":"none")">
                                                        <img src="@ViewBag.BannerImg" alt="image" />
                                                    </a>
                                                    <video src="@ViewBag.BannerImg" width="100" height="100" style="display:@(ViewBag.IsBannerImg==false ?"block":"none")" id="vdo" autoplay="autoplay" controls>
                                                        Your browser does not support HTML5 video.
                                                    </video>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group colMarginBottom">
                                            <label class="col-sm-2 control-label">Promotional Banner</label>
                                            <div class="col-lg-4">
                                                <div class="upload-btn-wrapper">
                                                    <button class="uploadBtn" type="button">
                                                        <i class="sm-file"></i> <br>Upload your file (.png, .jpg)
                                                    </button>
                                                    <input type="file" class="form-control" id="promotionalImgPath" name="promotional" onchange="readImage(this)" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="preview-image upload-btn-wrapper previewBorder">
                                                    <a id="linkUploadFilePath" name="promotional" href="@ViewBag.PromotionalImg" target="_blank" style="display:@(ViewBag.IsPromotionalImg==true ?"block":"none")" data-content="@Path.GetExtension(ViewBag.PromotionalImg)">
                                                        <img src="@ViewBag.PromotionalImg" alt="image" />
                                                    </a>

                                                    <video src="@ViewBag.PromotionalImg" width="100" height="100" style="display:@(ViewBag.IsPromotionalImg==false ?"block":"none")" id="vdo" autoplay="autoplay" controls>
                                                        Your browser does not support HTML5 video.
                                                    </video>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group colMarginBottom">
                                            <label class="col-sm-2 control-label">Empty Cart Image</label>
                                            <div class="col-lg-4">
                                                <div class="upload-btn-wrapper">
                                                    <button class="uploadBtn" type="button">
                                                        <i class="sm-file"></i> <br>Upload your file (.png, .jpg)
                                                    </button>
                                                    <input type="file" class="form-control" id="emptyCartImgPath" name="emptyCartImgPath" onchange="readImage(this)" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="preview-image upload-btn-wrapper previewBorder">
                                                    <a id="linkUploadFilePath" name="emptycart" href="@ViewBag.EmptyCartImg" target="_blank" data-content="@Path.GetExtension(ViewBag.EmptyCartImg)">
                                                        <img src="@ViewBag.EmptyCartImg" alt="image" />
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group colMarginBottom">
                                            <label class="col-sm-2 control-label">Min.Order</label>
                                            <div class="col-lg-4">
                                                <div class="upload-btn-wrapper">
                                                    <button class="uploadBtn" type="button">
                                                        <i class="sm-file"></i> <br>Upload your file (.png, .jpg)
                                                    </button>
                                                    <input type="file" class="form-control" id="minOrderImgPath" name="minOrderImgPath" onchange="readImage(this)" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="preview-image upload-btn-wrapper previewBorder">
                                                    <a id="linkUploadFilePath" name="minOrder" href="@ViewBag.MinOrderImg" target="_blank" data-content="@Path.GetExtension(ViewBag.MinOrderImg)">
                                                        <img src="@ViewBag.MinOrderImg" alt="image" />
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group colMarginBottom">
                                            <label class="col-sm-2 control-label">Location far</label>
                                            <div class="col-lg-4">
                                                <div class="upload-btn-wrapper">
                                                    <button class="uploadBtn" type="button">
                                                        <i class="sm-file"></i> <br>Upload your file (.png, .jpg)
                                                    </button>
                                                    <input type="file" class="form-control" id="locationFarImgPath" name="locationFarImgPath" onchange="readImage(this)" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="preview-image upload-btn-wrapper previewBorder">
                                                    <a id="linkUploadFilePath" name="locationFar" href="@ViewBag.LocationFarAwayImg" target="_blank" data-content="@Path.GetExtension(ViewBag.LocationFarAwayImg)">
                                                        <img src="@ViewBag.LocationFarAwayImg" alt="image" />
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group colMarginBottom">
                                            <label class="col-sm-2 control-label">Offline</label>
                                            <div class="col-lg-4">
                                                <div class="upload-btn-wrapper">
                                                    <button class="uploadBtn" type="button">
                                                        <i class="sm-file"></i> <br>Upload your file (.png, .jpg)
                                                    </button>
                                                    <input type="file" class="form-control" id="offileImgPath" name="offileImgPath" onchange="readImage(this)" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="preview-image upload-btn-wrapper previewBorder">
                                                    <a id="linkUploadFilePath" name="offline" href="@ViewBag.OfflineImg" target="_blank" data-content="@Path.GetExtension(ViewBag.OfflineImg)">
                                                        <img src="@ViewBag.OfflineImg" alt="image" />
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-sm-4 col-sm-offset-2">
                                                <button class="submitBtn mr-5" type="button" onclick="saveImages()">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>