@model IEnumerable<SmartMenu.DAL.Models.NewsLetterSubscriberModel>
@{
    ViewBag.Title = "NewsLetterSubscriberList";
    Layout = "~/Areas/securepanel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row pageTitle">
            <div class="col-lg-6">
                <h5>NewsLetter Subscriber List</h5>
            </div>
            <div class="col-lg-6 text-right">
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-hover dataTables-example">
                    <thead>
                        <tr>                          
                            <th>Email Address</th>
                            <th>Request Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>@item.EmailAddress</td>
                                    <td>@item.CreatedDate</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2">
                                    <div class="alert alert-danger text-center" role="alert">
                                        No data found
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

