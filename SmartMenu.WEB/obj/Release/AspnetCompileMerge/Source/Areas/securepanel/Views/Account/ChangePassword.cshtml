
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/SecurePanel/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1>Change Your Password</h1>
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home",new {area="securepanel" })">Home</a></li>
                    <li class="breadcrumb-item active">Change Your Password</li>
                </ol>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">                   
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form role="form" id="frmChangePassword" name="frmChangePassword">
                            @Html.AntiForgeryToken()
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Old Password</label>
                                    <input type="password" class="form-control" id="oldPassword" name="OldPassword" placeholder="Old Password">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">New Password <small><strong>(Your new password must be alphanumeric)</strong></small></label>
                                    <input type="password" class="form-control" id="newPassword" name="NewPassword" placeholder="New Password">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm Password">
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="button" class="btn btn-primary" id="btnChangePassword">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>



