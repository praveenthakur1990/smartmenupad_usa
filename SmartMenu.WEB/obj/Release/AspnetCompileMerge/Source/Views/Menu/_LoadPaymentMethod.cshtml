<div class="checkoutSec">
    <h3>Choose Payment Method</h3>
    <p>All transaction are secure and encrypted </p>
    <div class="row">
        <div class="col-12 i-checks">
            <div class="row">
                @if (ViewBag.OrderType == "PickUp")
                {
                    <div class="col-lg-4 col-md-12 mb-3">
                        <label class="payOption"><input type="radio" value="payWithCard" id="optionsRadios1" name="paymentMethod"> Pay with Card</label>
                    </div>
                }
                else
                {
                    <div class="col-lg-4 col-md-12 mb-3">
                        <label class="payOption"><input type="radio" value="payWithCard" id="optionsRadios1" name="paymentMethod"> Pay with Card</label>
                    </div>
                    if (ViewBag.CashOnDeliveryEnable == true)
                    {
                        <div class="col-lg-4 col-md-12 mb-3">
                            <label class="payOption"><input type="radio" value="cash" id="optionsRadios1" name="paymentMethod"> Cash on Delivery</label>
                        </div>
                    }

                }

            </div>
        </div>
        <div class="col-lg-12">
            <button class="orderPlaceBtn" type="button" onclick="btnProceedForPayment()">Payment</button>
        </div>
    </div>

</div>
