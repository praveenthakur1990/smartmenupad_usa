                                    <div class="input-group-append">
                                        <button type="submit" name="submit" class="btn btn-danger">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>*@
                    </div>
                </div>
                <!-- /.error-page -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 0.1
            </div>
            Copyright &copy; @DateTime.Now.Year <a href="#">Taw Smart Supply</a>. All rights reserved.
        </footer>
    </div>
    <script src="~/Content/theme/js/bootstrap.min.js"></script>
    <script src="~/Content/theme/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/theme/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/theme/js/inspinia.js"></script>
</body>
</html>
