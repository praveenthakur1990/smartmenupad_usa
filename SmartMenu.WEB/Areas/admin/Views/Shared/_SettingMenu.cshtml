@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var actionName = this.ViewContext.RouteData.Values["action"].ToString();
}
<ul>
    <li class="@(controllerName=="Dashboard" && actionName=="Profile" ? "active":"")">
        <a href="@Url.Action("Profile","Dashboard",new {area="admin" })">
            <i class="sm-user"></i>
            Profile<span>Restaurant name, contact detail, subscription plan details</span>
        </a>
    </li>
    <li class="@(controllerName=="Setting" && actionName=="AddUpdateBusinessHours" ? "active":"")">
        <a href="@Url.Action("AddUpdateBusinessHours","Setting",new {area="admin" })" class="@(controllerName=="Setting" && actionName=="AddUpdateBusinessHours" ? "active":"")">
