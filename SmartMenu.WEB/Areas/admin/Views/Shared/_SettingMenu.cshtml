            Configuration<span>Payment method setting, order amount</span>
        </a>
    </li>

    <li class="@(controllerName=="Setting" && actionName=="AddUpdateQuickPages" ? "active":"")">
        <a href="@Url.Action("AddUpdateQuickPages","Setting",new {area="admin" })" class="@(controllerName=="Setting" && actionName=="AddUpdateQuickPages" ? "active":"")">
            <i class="sm-web-page"></i>
            Static Pages<span>Frontend pages content</span>
        </a>
    </li>

    <li class="@(controllerName=="Setting" && actionName=="AddUpdateSocialMediaLinks" ? "active":"")">
